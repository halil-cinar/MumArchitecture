@model IdentityCheckDto



<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h4 mb-3 text-center">Giriş Yap</h1>
                    <form action="/login/login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" asp-for="Email" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="password" asp-for="Password" required>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Giriş</button>
                    </form>
                    <div class="text-center mt-3">
                        <a href="/login/forgotpassword" class="link-secondary">Şifremi Unuttum</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
