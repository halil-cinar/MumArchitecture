@{
    ViewData["title"] = Lang.Value("Setting");
    ViewData["breadcreamp"] = string.Join("-", Lang.Value("Home"), Lang.Value("Setting"));
}

<grid id="gridSettings" class="table table-hover" url="@Url.Action("Read", "Setting", new { area = "Admin" })">
    <filters>
        <field for="Name" type="TEXT" lg-size="3" label="@Lang.Value("Name")" />
        <field for="Key" type="TEXT" lg-size="3" label="@Lang.Value("Key")" />
        <field for="Category" type="Select" lg-size="3" label="@Lang.Value("Category")" items="@(new[] {
                    new SelectListItem { Value = "main",  Text = Lang.Value("Main") },
                    new SelectListItem { Value = "smtp", Text = "SMTP"}
                    
               })" />
        
       
    </filters>

    <column for="Id" title="@Lang.Value("Id")" style="width:4rem;" />
    <column for="Name" title="@Lang.Value("Name")" />
    <column for="Key" title="@Lang.Value("Key")" />
    <column for="Value" title="@Lang.Value("Value")" />
    <column for="Type" title="@Lang.Value("Type")" />
    <column for="Category" title="@Lang.Value("Category")" />

    <rowbutton icon="bi bi-eye"
               title="@Lang.Value("Edit")"
               class="btn btn-info"
               url="@Url.ActionLink("Edit","Setting",new {area="admin",id="[id]"})" />

</grid>
