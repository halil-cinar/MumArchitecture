@using MumArchitecture.Domain.ListDtos

@{
    ViewData["Title"] = "Edit";
}
@model SettingListDto
@{
    ViewData["Title"] = Lang.Value("MenuEdit");
    ViewData["breadcreamp"] = string.Join("-", Lang.Value("Home"), Lang.Value("Menu"));
    var settingType = Model.SettingType ?? new List<MumArchitecture.Domain.Entities.SettingType>();
}

<ajax-json-form asp-name="settingsForm"
                asp-action="/Admin/Setting/Save"
                asp-method="post"
                asp-settings="Model.SettingType"
                asp-value="@Html.Raw(Model.Value)"
                asp-entity-id="@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Key" />
</ajax-json-form>


